#!/usr/bin/env bash
# This script generates an RSA key pair with a passphrase.

# Set the filename for the private key
private_key="school"

# Number of bits for the key
key_bits=4096

# Get passphrase from user
read -s -p "Enter passphrase for the private key: " passphrase

# Generate RSA key pair
ssh-keygen -t rsa -b "$key_bits" -f "$private_key" -N "$passphrase"

# Display information about the generated key pair
echo "RSA key pair generated successfully."

# Display the public key
echo "Public key:"
cat "${private_key}.pub"
